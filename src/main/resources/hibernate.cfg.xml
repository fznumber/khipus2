<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
    <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
    <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/eos</property>
    <property name="connection.username">root</property>
    <property name="connection.password">Control123</property>
    <property name="hibernate.connection.pool_size">10</property>
    <property name="hibernate.current_session_context_class">thread</property>
    <property name="hibernate.show_sql">true</property>
    <property name="hibernate.hbm2ddl.auto">validate</property>
    <!-- MAPPING -->
    <!-- <mapping class="encens.khipus.model.admin" /> -->
    <mapping class="encens.khipus.model.admin.Compania"/>
    <mapping class="encens.khipus.model.admin.Usuario"/>
    <mapping resource="encens/khipus/model/admin/Compania.hbm.xml"/>
    <mapping resource="encens/khipus/model/admin/Usuario.hbm.xml"/>

  </session-factory>
</hibernate-configuration>
