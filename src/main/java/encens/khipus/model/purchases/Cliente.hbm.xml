<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="encens.khipus.model.purchases.Cliente" table="cliente" schema="" catalog="eos">
        <id name="idcliente">
            <column name="IDCLIENTE" sql-type="bigint" not-null="true"/>
        </id>
        <property name="direccion">
            <column name="DIRECCION" sql-type="varchar" length="100"/>
        </property>
        <property name="telefono">
            <column name="TELEFONO" sql-type="int"/>
        </property>
        <property name="nit">
            <column name="NIT" sql-type="varchar" length="40"/>
        </property>
        <property name="codigo">
            <column name="CODIGO" sql-type="varchar" length="10"/>
        </property>
        <many-to-one name="institucionByIdinstitucion" class="encens.khipus.model.purchases.Institucion">
            <column name="IDINSTITUCION" not-null="true"/>
        </many-to-one>
        <many-to-one name="tipoclienteByIdtipocliente" class="encens.khipus.model.purchases.Tipocliente">
            <column name="IDTIPOCLIENTE" not-null="true"/>
        </many-to-one>
        <set name="pedidosesByIdcliente" inverse="true">
            <key>
                <column name="IDCLIENTE" not-null="true"/>
            </key>
            <one-to-many not-found="ignore" class="encens.khipus.model.purchases.Pedidos"/>
        </set>
        <set name="ventaarticulosByIdcliente" inverse="true">
            <key>
                <column name="IDCLIENTE" not-null="true"/>
            </key>
            <one-to-many not-found="ignore" class="encens.khipus.model.purchases.Ventaarticulo"/>
        </set>
    </class>
</hibernate-mapping>